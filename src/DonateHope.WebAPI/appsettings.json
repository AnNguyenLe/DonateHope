{
	"MyAppServer": {
		"BaseUrl": "http://donate-hope-backend-container:7066"
	},
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Information"
		}
	},
	"AllowedOrigins": ["http://donate-hope-frontend-container:80", "*"],
	"ConnectionStrings": {
		"Default": "Server=donate-hope-db;Port=5432;Database=donate_hope;User Id=donate-hope-dba;Password=admin123;"
	},
	"Jwt": {
		"Issuer": "http://donate-hope-backend-container:7066",
		"Audience": "http://donate-hope-frontend-container:80",
		"AccessTokenLifeTimeInHours": 10,
		"RefreshTokenLifeTimeInHours": 80,
		"SecretKey": "kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
	},
	"SmtpSettings": {
		"Host": "your-smtp-host-here",
		"Port": 587,
		"SenderName": "sender-name-here",
		"SenderEmail": "someone@example.com",
		"Username": "your-smtp-username-here",
		"Password": "your-smtp-password-here"
	},
	"Serilog": {
		"MinimumLevel": "Information",
		"Using": [
			"Serilog.Sinks.Console",
			"Serilog.Sinks.File",
			"Serilog.Sinks.Seq"
		],
		"WriteTo": [
			{
				"Name": "Console"
			},
			{
				"Name": "File",
				"Args": {
					"path": "log/log.txt",
					"rollingInterval": "Hour",
					"fileSizeLimitBytes": 1048576,
					"rollOnFileSizeLimit": true
				}
			}
		]
	}
}
